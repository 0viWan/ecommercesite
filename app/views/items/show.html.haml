%div.container
  %h1 We want to show off this item to you.
  %h3
    Item For Sale: #{@item.title}
  %p
    %img{:alt => "Buy this thing", :height => "200", :src => @item.picture_link, :width => "200", :class => "img-circle"}
  %p
    About: #{@item.description}
  %p
    Quantity in Stock: #{@item.quantity}
  %p
    Categories:
    - @item.categories.each do |category|
      = category.name
  %p.price
    $#{@item.price}
  = form_for @purchased_item do |f|
    %input{:max => "#{@item.quantity}", :min => "1", :name => "quantity", :type => "number"}
    %input{:type => "hidden", :value => @item.id, :name => "item_id"}
      %input{:type => "submit", :value => 'Add to Cart'}


= link_to 'Back to Home Page', items_path



