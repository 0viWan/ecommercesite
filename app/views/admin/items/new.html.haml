%div.container
  %h1 Add a new item
  = if flash[:error]
    %div #{flash[:error]}

  = form_for @item, url: {action: "create"}, html: {class:"submit_item_form"} do |f|
    %fieldset.form-group
      = f.label :title
      = f.text_field :title, class: 'form-control'
    %fieldset.form-group
      = f.label :price
      = f.text_field :price, class: 'form-control'
    %fieldset.form-group
      = f.label :description
      = f.text_area(:description, placeholder: "Please enter your item details", size: "24x6", class: "form-control")
    %fieldset.form-group
      = f.label :quantity
      = f.number_field :quantity, class: 'form-control'
    %fieldset.form-group
      = f.label :categories
      = f.select :categories, @array, :prompt => 'Select One', :multiple => true, :size => 3
    = f.submit "Submit Your Item For Sale", class: "btn btn-primary"



